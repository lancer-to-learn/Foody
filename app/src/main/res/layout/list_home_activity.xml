<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgView_restaurant"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        app:layout_constraintEnd_toStartOf="@+id/imgView_restaurant2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgView_restaurant2"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imgView_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_restaurant_name"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView_restaurant"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgView_restaurant2"
        app:layout_constraintStart_toStartOf="@+id/imgView_restaurant2"
        app:layout_constraintTop_toBottomOf="@+id/imgView_restaurant2" />

    <TextView
        android:id="@+id/txt_restaurant_name2"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView_restaurant2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/txt_restaurant_name"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgView_restaurant"
        app:layout_constraintStart_toStartOf="@+id/imgView_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/imgView_restaurant" />

    <TextView
        android:id="@+id/txt_address_restaurant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txt_restaurant_name2"
        app:layout_constraintTop_toBottomOf="@+id/txt_restaurant_name2" />

    <TextView
        android:id="@+id/txt_address_restaurant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txt_restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_restaurant_name" />

    <TextView
        android:id="@+id/txt_open_time_restaurant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:text="4:00 PM"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingBar4"
        app:layout_constraintTop_toTopOf="@+id/ratingBar4" />

    <TextView
        android:id="@+id/txt_open_time_res1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="8:00 AM"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar2"
        app:layout_constraintStart_toEndOf="@+id/ratingBar2"
        app:layout_constraintTop_toTopOf="@+id/ratingBar2" />

    <RatingBar
        android:id="@+id/ratingBar2"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="4"
        app:layout_constraintStart_toStartOf="@+id/txt_address_restaurant1"
        app:layout_constraintTop_toBottomOf="@+id/txt_address_restaurant1" />

    <RatingBar
        android:id="@+id/ratingBar4"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:progressTint="#FFEB3B"
        android:rating="3.5"
        app:layout_constraintStart_toStartOf="@+id/txt_address_restaurant2"
        app:layout_constraintTop_toBottomOf="@+id/txt_address_restaurant2" />

</androidx.constraintlayout.widget.ConstraintLayout>