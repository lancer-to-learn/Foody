<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    >


    <ImageView
        android:id="@+id/img_nearRestaurant"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant" />

    <TextView
        android:id="@+id/txt_name_near_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"

        android:text="Rendang"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_nearRestaurant" />

    <TextView
        android:id="@+id/txt_nearRestaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="123 Nguyen Hue"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/txt_name_near_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_near_restaurant" />

    <TextView
        android:id="@+id/txt_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        android:text="Open 8:00 AM"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/ratingBar" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbarSize="2dp"
        app:layout_constraintStart_toStartOf="@+id/txt_nearRestaurant_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_nearRestaurant_address" />


</androidx.constraintlayout.widget.ConstraintLayout>
